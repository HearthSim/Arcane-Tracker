<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">
    <ImageView
            android:src="@drawable/bgs_toast_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_height="0dp"
            android:layout_width="0dp"/>

    <View android:background="@drawable/bgsripple"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_height="0dp"
          android:layout_width="0dp"/>

    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/icon"
               app:layout_constraintLeft_toLeftOf="parent"
               android:src="@drawable/ic_hs_replay"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/compare_heroes"
              android:textSize="16dp"
              app:layout_constraintLeft_toRightOf="@+id/icon"
              app:layout_constraintTop_toTopOf="@+id/icon"
              android:id="@+id/text"
              app:layout_constraintBottom_toBottomOf="@+id/icon"
              android:paddingBottom="4dp"
              android:textColor="#fff"
              android:fontFamily="@font/barlow_semicondensed_semibold"
              app:layout_constraintRight_toRightOf="parent"
              android:paddingLeft="0dp"
              android:paddingRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>